const express = require("express");
const app = express();

app.set("view engine", "ejs");

app.get("/", (req, res) => {
  const user = "Harsha";
  const items = ["Pen", "Book", "Laptop"];
  res.render("home", { user, items });
});

app.listen(3000, () => {
  console.log("Server running on http://localhost:3000");
});


home.ejs

<!DOCTYPE html>
<html>
<head>
  <title>EJS Example</title>
</head>
<body>
  <h1>Welcome, <%= user %>!</h1>

  <h2>Your Items:</h2>
  <ul>
    <% items.forEach(item => { %>
      <li><%= item %></li>
    <% }) %>
  </ul>
</body>
</html>
